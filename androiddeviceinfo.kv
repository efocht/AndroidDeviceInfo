#: import SwapTransition kivy.uix.screenmanager.SwapTransition
#: import Utils kivy.utils

AppScreenManager:

<AppScreenManager>:
    transition: SwapTransition()
    MainScreen:

<MainScreen>:
    name: 'MainScreen'
    GridLayout:
        canvas.before:
            Color:
                rgb: Utils.get_color_from_hex('#E0E0E0')
            Rectangle:
                size: self.size
                pos: self.pos
        cols: 1
        padding: -2
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, None
            height: '50dp'
            Label:
                size_hint: 1, None
                height: '50dp'
                text: 'text'
                color: Utils.get_color_from_hex('#00000057')
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                size_hint: 1, None
                height: '50dp'
                text: 'EXIT'
                on_release: app.stop()